<?xml version="1.0"?>
   <!--   Hyperic jvm-plugin extensions for ZeBuggyS                                 -->
   <!--                                                                              -->
<plugin name="my-app-ze-buggy-service">

   <service name="My App Ze Buggy Service" server="Sun JVM" version="1.5">

      <property name="OBJECT_NAME" value="fr.xebia:service=ZeBuggyService,type=ZeBuggyServiceStatistics,host=*,path=*" />

      <property name="AUTOINVENTORY_NAME" value="%serverName% %path% My App Ze Buggy Service" />

      <plugin type="autoinventory" />

      <config>
         <option name="host" description="Hostname" default="" />
         <option name="path" description="Path of the web application" default="/" />
      </config>

      <filter name="template" value="${OBJECT_NAME}:${alias}" />

      <metric name="Availability" indicator="true" />

      <metric name="ZeBuggyServiceException Count" alias="ZeBuggyServiceExceptionCount" indicator="true" template="${OBJECT_NAME}:${alias}"
         units="none" collectionType="trendsup" category="THROUGHPUT" />

      <metric name="TimeoutException Count" alias="TimeoutExceptionCount" indicator="true" template="${OBJECT_NAME}:${alias}"
         units="none" collectionType="trendsup" category="THROUGHPUT" />

      <metric name="Invocation Count" alias="InvocationCount" indicator="true" template="${OBJECT_NAME}:${alias}" units="none"
         collectionType="trendsup" category="THROUGHPUT" />

      <metric name="Other RuntimeException Count" alias="OtherRuntimeExceptionCount" indicator="true" template="${OBJECT_NAME}:${alias}"
         units="none" collectionType="trendsup" category="THROUGHPUT" />

      <metric name="Total Duration In Millis" alias="TotalDurationInMillis" indicator="true" template="${OBJECT_NAME}:${alias}"
         units="ms" collectionType="trendsup" category="PERFORMANCE" />

      <metric name="Current Active" alias="CurrentActive" indicator="true" template="${OBJECT_NAME}:${alias}" units="none" category="UTILIZATION" />
   </service>
</plugin>