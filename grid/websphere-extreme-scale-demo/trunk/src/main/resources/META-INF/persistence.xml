<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.0"
   xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">

   <persistence-unit name="ticketingPersistenceUnit" transaction-type="RESOURCE_LOCAL">
      <class>fr.xebia.demo.objectgrid.ticketing.Seat</class>
      <class>fr.xebia.demo.objectgrid.ticketing.Train</class>
      <class>fr.xebia.demo.objectgrid.ticketing.TrainStop</class>
      <properties>
         <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
         <property name="hibernate.hbm2ddl.auto" value="update" />

         <!-- DEBUG -->
         <property name="hibernate.show_sql" value="true" />

         <!-- HSQLDB CONFIGURATION -->
         <property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver" />
         <property name="hibernate.connection.username" value="sa" />
         <property name="hibernate.connection.password" value="" />
         <property name="hibernate.connection.url" value="jdbc:hsqldb:hsql://localhost/train-ticketing-system" />

      </properties>
   </persistence-unit>
</persistence>